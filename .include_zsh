# source this script from .zshrc

# options
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagaced
export TERM=xterm-256color
export EDITOR=nvim

# aliases
alias ls='ls -a'
alias vim='nvim'

# zsh options
# globdots: show hidden files
setopt globdots
# reverse-menu-complete: reverse menu completion via SHIFT + TAB
bindkey '^[[Z' reverse-menu-complete